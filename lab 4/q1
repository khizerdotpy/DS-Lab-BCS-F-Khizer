#include <iostream>
using namespace std;


void linearSearch( int* a,int s, int val){
    for(int i=0;i<s;i++){
        if(a[i]==val){
            cout<<"Found at position: "<<i+1<<"."<<endl;
            return;
        }
    }
    cout<<val<<" is not found in array.Try again\n";
}


int main(){

    int r;
    int* arr;
    cout<<"enter number of elements in array: ";
    cin>>r;
    arr=new int[r];

    for(int i=0;i<r;i++){
        cout<<"Enter element "<<i+1<<": ";
        cin>>arr[i];
    }
    int val=-1;
    cout<<"Enter the value to search: ";
    cin>>val;

    linearSearch(arr,r,val);

    delete[] arr;

    return 0;
}
