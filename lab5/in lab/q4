#include <iostream>
using namespace std;

int ackermann(int m, int n, int depth = 0) {
    for (int i = 0; i < depth; i++){
        cout << "  ";
    }
    cout << "ackermann(" << m << ", " << n << ") called" << endl;
    int res;
    if (m == 0) {
        res = n + 1;
    } else if (m > 0 && n == 0) {
        res = ackermann(m - 1, 1, depth + 1);
    } else {
        res = ackermann(m - 1, ackermann(m, n - 1, depth + 1), depth + 1);
    }

    for (int i = 0; i < depth; i++){
        cout << "  ";
    }
    cout << "ackermann(" << m << ", " << n << ") returns " << res << endl;

    return res;
}

int main() {
    int m, n;
    cout << "Enter values for m and n: ";
    cin >> m >> n;

    cout << "\nAckermann function calls:\n";
    int result = ackermann(m, n);

    cout << "\nFinal Result: Tuple(" << m << ", " << n << ") = " << result << endl;
    return 0;
}
