#include <iostream>
using namespace std;



int binarySearch(int* a,int s,int rnum){

    int left=0;
    int right=s-1;
    bool isFound=false;
    int mid=-1;

    while(left<=right){
         mid=left+(right-left)/2;
        if((a[mid])==rnum){
            cout<<"found at position: "<<mid<<" . "<<endl;
            isFound=true;
            return 1;
        } else if(a[mid]<rnum){
            left=mid+1;
        } else {
            right=mid-1;
        }
        
    }
    return -1;

}

int main(){

    int rnum=20;
    int r;
    int* arr;
    cout<<"enter number of elements in array: ";
    cin>>r;
    arr=new int[r];
    for(int i=0;i<r;i++){
        cout<<"Enter element "<<i+1<<": ";
        cin>>arr[i];
    }

   int found = binarySearch(arr,r,rnum);
    
    if(found==-1){
        int s=r+1;
        int* temp=new int[s];
        int free=0;
        for(int i=0;i<s;i++){
            temp[i]=arr[i];
        }
        for(int i=0;i<s;i++){
            if(temp[i]<rnum){
                free=i;
            }
        }
        for(int i=r;i>free;i--){
            temp[i]=temp[i-1];
            
        }
        temp[free]=rnum;
        
        for(int i=0;i<r+1;i++){
            cout<<temp[i]<<" ";
        }
    }

    return 0;
}
